{% extends 'base.html.twig' %}

{% block title %}BrewHistory index{% endblock %}

{% block body %}
    <h1>BrewHistory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for brew_history in brew_histories %}
            <tr>
                <td>{{ brew_history.id }}</td>
                <td>{{ brew_history.note }}</td>
                <td>
                    <a href="{{ path('app_brew_history_show', {'id': brew_history.id}) }}">show</a>
                    <a href="{{ path('app_brew_history_edit', {'id': brew_history.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_brew_history_new') }}">Create new</a>
{% endblock %}
